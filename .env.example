# .env.example - DO NOT PUT SECRETS HERE

# ---------------- Security ----------------
SECRET_KEY=replace_this_with_a_generated_secret
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_MINUTES=10080

# ---------------- Database ----------------
DATABASE_URL=postgresql://USER:PASSWORD@HOST:PORT/DB_NAME

# ---------------- Admin User (created on startup) ----------------
ADMIN_EMAIL=admin@domain.com
ADMIN_PASSWORD=replace_with_secure_password

# ---------------- Firebase ----------------
# Option A (preferred for deployment): paste JSON credentials directly as a string
FIREBASE_CREDENTIALS_JSON=

# Option B (local dev only): path to local JSON file (never commit the file itself)
FIREBASE_CREDENTIALS_PATH=/path/to/keys/firebase-service-account.json
